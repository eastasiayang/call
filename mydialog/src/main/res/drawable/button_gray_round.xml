<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFEAEAEA"/>
            <stroke android:width="1px" android:color="#FFDEDEDE" />
            <corners android:radius="20dp" />
            <padding android:left="3dp" android:top="10dp" android:right="3dp" android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFEAEAEA"/>
            <stroke android:width="1px" android:color="#FFDEDEDE" />
            <corners android:radius="20dp" />
            <padding android:left="3dp" android:top="10dp" android:right="3dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFF7F7F7"/>
            <stroke android:width="1px" android:color="#FFDEDEDE" />
            <corners android:radius="20dp" />
            <padding android:left="3dp" android:top="10dp" android:right="3dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>